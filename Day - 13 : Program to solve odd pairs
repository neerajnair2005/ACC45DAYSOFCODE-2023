#include <bits/stdc++.h>
using namespace std;
int main() {
	int t;
	cin>>t;
	while(t--){
	    int n,k;
	    int a[n];
	    cin>>n>>k;
	    if(n>2*k){
	      cout<<"-1"<<endl;
	    }
	    else{
	        for(int i=0;i<n/2;i++){
	            a[i]=1;
	        }
	        for(int i=n/2;i<n-1;i++){
	            a[i]=0;
	        }
	        a[n-1]=k-(n/2);
	        for(int i=0;i<n;i++){
	            cout<<a[i]<<" ";
	        }
	        cout<<endl;
	    }
	    }
	return 0;
}
